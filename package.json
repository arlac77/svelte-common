{
  "name": "svelte-common",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "svelte": "./src/index.svelte",
  "description": "common components and utils used in svelte apps",
  "keywords": [
    "component",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:ava && npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 9000 --app-init-delay 3000 --app vite",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:css && npm run lint:docs && documentation lint ./src/index.mjs",
    "lint:docs": "documentation lint ./src/**/*.mjs",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "svelte-command": "^1.1.18",
    "svelte-entitlement": "^1.2.25"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "ava": "^4.3.1",
    "documentation": "^13.2.5",
    "mf-styling": "^1.2.26",
    "npm-pkgbuild": "^10.11.3",
    "semantic-release": "^19.0.3",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "svelte": "^3.49.0",
    "testcafe": "^1.19.0",
    "vite": "^3.0.0"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/svelte-common.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/svelte-common/issues"
  },
  "homepage": "https://github.com/arlac77/svelte-common#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "groups": "examples",
    "http.base.path": "/examples"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --verbose"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-ava",
      "arlac77/template-cloudflare",
      "arlac77/template-css",
      "arlac77/template-pacman",
      "arlac77/template-svelte-component#next"
    ]
  }
}
